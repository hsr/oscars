    Open Grid Forum NSI Connection Services Protocol v2.0

    Description: This is the NSI Connection Services Protocol 2.0 service definitions for the reference web services implementation of the OGF NSI Connection Services Protocol v2.0. Comments and questions can be directed to the mailing list group mailing list (nsi-wg@ogf.org).

    This document is the SOAP endpoint definition for a provider NSA.  It holds definitions for messages the provider NSA will receive.  For the reserve, provision, release, and terminate message sets the provider will receive request messages only.  For the query operation a provider NSA must support request, confirmed, and failed messages due to the possibility that a provider NSA may query the requester for a list of connection reservations.
-->
<wsdl:definitions name="ogf_nsi_connection_provider_v2_0"
    targetNamespace="http://schemas.ogf.org/nsi/2012/03/connection/provider"
    xmlns="http://schemas.xmlsoap.org/wsdl/"
    xmlns:wsdl="http://schemas.xmlsoap.org/wsdl/"
    xmlns:soap="http://schemas.xmlsoap.org/wsdl/soap/"
    xmlns:tns="http://schemas.ogf.org/nsi/2012/03/connection/provider"
    xmlns:interface="http://schemas.ogf.org/nsi/2012/03/connection/interface">

    <wsdl:import namespace="http://schemas.ogf.org/nsi/2012/03/connection/interface"
        location="ogf_nsi_connection_interface_v2_0.wsdl" />

    <!-- WSDL operation definitions with associated input (request), output
        (response), and fault (error response) messages. -->
    <wsdl:portType name="ConnectionProviderPort">
        
        <!-- ********** Reserve operation set *********** -->
        
        <wsdl:operation name="reserve">
            <wsdl:documentation>
                The reserve message is sent from a Requester NSA to a Provider
                NSA when a new reservation is being requested. The reserveACK
                indicates that the Provider NSA has accepted the reservation
                request for processing. A reserveConfirmed or reserveFailed
                message will be sent asynchronously to the Requester NSA
                when reservation processing has completed.
            </wsdl:documentation>
            <wsdl:input  name="reserve"             message="interface:reserve" />
            <wsdl:output name="reserveACK"          message="interface:acknowledgment" />
            <wsdl:fault  name="serviceException"    message="interface:serviceException" />
        </wsdl:operation>

        <!-- ********** ModifyCheck operation set *********** -->
        
        <wsdl:operation name="modifyCheck">
            <wsdl:documentation>
                The modifyCheck message is sent from a Requester NSA to a
                Provider NSA when a modification to an existing reservation is
                being requested. The modifyCheckACK indicates that the
                Provider NSA has accepted the modifyCheck request for
                processing. A modifyCheckConfirmed or modifyCheckFailed
                message will be sent asynchronously to the Requester NSA
                when modifyCheck processing has completed.
            </wsdl:documentation>
            <wsdl:input  name="modifyCheck"         message="interface:modifyCheck" />
            <wsdl:output name="modifyCheckACK"      message="interface:acknowledgment" />
            <wsdl:fault  name="serviceException"    message="interface:serviceException" />
        </wsdl:operation>

        <!-- ********** Modify operation set *********** -->
        
        <wsdl:operation name="modify">
            <wsdl:documentation>
                The modify message is sent from a Requester NSA to a
                Provider NSA when a modification to an existing reservation is
                being committed. The modifyACK indicates that the Provider
                NSA has accepted the modify request for processing. A
                modifyConfirmed or modifyFailed message will be sent
                asynchronously to the Requester NSA when modify processing has
                completed.
            </wsdl:documentation>
            <wsdl:input  name="modify"              message="interface:modify" />
            <wsdl:output name="modifyACK"           message="interface:acknowledgment" />
            <wsdl:fault  name="serviceException"    message="interface:serviceException" />
        </wsdl:operation>

        <!-- ********** ModifyCancel operation set *********** -->
        
        <wsdl:operation name="modifyCancel">
            <wsdl:documentation>
                The modifyCancel message is sent from a Requester NSA to a
                Provider NSA when a cancellation to an existing modify is
                being requested. The modifyCancelACK indicates that the
                Provider NSA has accepted the modifyCheck request for
                processing. A modifyCancelConfirmed or modifyCancelFailed
                message will be sent asynchronously to the Requester NSA
                when modifyCancel processing has completed.
            </wsdl:documentation>
            <wsdl:input  name="modifyCancel"        message="interface:modifyCancel" />
            <wsdl:output name="modifyCancelACK"     message="interface:acknowledgment" />
            <wsdl:fault  name="serviceException"    message="interface:serviceException" />
        </wsdl:operation>
        
        <!-- ********** Provision operation set *********** -->
        
        <wsdl:operation name="provision">
            <wsdl:documentation>
                The provision message is sent from a Requester NSA to a Provider
                NSA when an existing reservation is to be transitioned into a
                provisioned state. The provisionACK indicates that the Provider
                NSA has accepted the provision request for processing. A
                provisionConfirmed or provisionFailed message will be sent
                asynchronously to the Requester NSA when provision processing
                has completed.
            </wsdl:documentation>
            <wsdl:input  name="provision"           message="interface:provision" />
            <wsdl:output name="provisionACK"        message="interface:acknowledgment" />
            <wsdl:fault  name="serviceException"    message="interface:serviceException" />
        </wsdl:operation>
        
        <!-- ********** Release operation set *********** -->
        
        <wsdl:operation name="release">
            <wsdl:documentation>
                The release message is sent from a Requester NSA to a Provider NSA
                when an existing reservation is to be transitioned into a released
                state. The releaseACK indicates that the Provider NSA has
                accepted the release request for processing. A releaseConfirmed
                or releaseFailed message will be sent asynchronously to the
                Requester NSA when release processing has completed.
            </wsdl:documentation>
            <wsdl:input  name="release"             message="interface:release" />
            <wsdl:output name="releaseACK"          message="interface:acknowledgment" />
            <wsdl:fault  name="serviceException"    message="interface:serviceException" />
        </wsdl:operation>
        
        <!-- ********** Terminate operation set *********** -->
        
        <wsdl:operation name="terminate">
            <wsdl:documentation>
                The terminate message is sent from a Requester NSA to a Provider
                NSA when an existing reservation is to be terminated. The
                terminateACK indicates that the Provider NSA has accepted the
                terminate request for processing. A terminateConfirmed or
                terminateFailed message will be sent asynchronously to the Requester
                NSA when terminate processing has completed.
            </wsdl:documentation>
            <wsdl:input  name="terminate"           message="interface:terminate" />
            <wsdl:output name="terminateACK"        message="interface:acknowledgment" />
            <wsdl:fault  name="serviceException"    message="interface:serviceException" />
        </wsdl:operation>
        
        <!-- ********** Query operation set *********** -->
        
        <wsdl:operation name="query">
            <wsdl:documentation>
                The query message can be sent from either a Provider or Requester NSA
                to determine the status of existing reservations.  The queryACK
                indicates that the target NSA has accepted the query request for
                processing. A queryConfirmed or queryFailed message will be sent
                asynchronously to the requesting NSA when query processing has
                completed.
            </wsdl:documentation>
            <wsdl:input  name="query"               message="interface:query" />
            <wsdl:output name="queryACK"            message="interface:acknowledgment" />
            <wsdl:fault  name="serviceException"    message="interface:serviceException" />
        </wsdl:operation>
        
        <wsdl:operation name="queryConfirmed">
            <wsdl:documentation>
                This queryConfirmed message is sent from the target NSA to requesting
                NSA as an indication of a successful query operation. This is in
                response to an original query request from the associated Requester
                NSA.
            </wsdl:documentation>
            <wsdl:input  name="queryConfirmed"      message="interface:queryConfirmed" />
            <wsdl:output name="queryConfirmedACK"   message="interface:acknowledgment" />
            <wsdl:fault  name="serviceException"    message="interface:serviceException" />
        </wsdl:operation>
        
        <wsdl:operation name="queryFailed">
            <wsdl:documentation>
                This queryFailed message is sent from the target NSA to requesting
                NSA as an indication of a query operation failure. This is in
                response to an original query request from the associated
                Requester NSA.
            </wsdl:documentation>
            <wsdl:input  name="queryFailed"         message="interface:queryFailed" />
            <wsdl:output name="queryFailedACK"      message="interface:acknowledgment" />
            <wsdl:fault  name="serviceException"    message="interface:serviceException" />
        </wsdl:operation>
    </wsdl:portType>
    
    <wsdl:binding name="ConnectionServiceProviderSoapBinding" type="tns:ConnectionProviderPort">
        <soap:binding style="document" transport="http://schemas.xmlsoap.org/soap/http" />

        <!-- ********** Reserve operation set ********** -->

        <wsdl:operation name="reserve">
            <soap:operation
                soapAction="http://schemas.ogf.org/nsi/2012/03/connection/service/reserve"
                style="document" />
            <wsdl:input>
                <soap:header message="interface:header" part="header" use="literal"/>
                <soap:body use="literal" />
            </wsdl:input>
            <wsdl:output>
                <soap:header message="interface:header" part="header" use="literal"/>
                <soap:body use="literal" />
            </wsdl:output>
            <wsdl:fault name="serviceException">
                <soap:fault name="serviceException" use="literal" />
            </wsdl:fault>
        </wsdl:operation>

        <!-- ********** ModifyCheck operation set ********** -->
        
        <wsdl:operation name="modifyCheck">
            <soap:operation
                soapAction="http://schemas.ogf.org/nsi/2012/03/connection/service/modifyCheck"
                style="document" />
            <wsdl:input>
                <soap:header message="interface:header" part="header" use="literal"/>
                <soap:body use="literal" />
            </wsdl:input>
            <wsdl:output>
                <soap:header message="interface:header" part="header" use="literal"/>
                <soap:body use="literal" />
            </wsdl:output>
            <wsdl:fault name="serviceException">
                <soap:fault name="serviceException" use="literal" />
            </wsdl:fault>
        </wsdl:operation>

        <!-- ********** Modify operation set ********** -->
        
        <wsdl:operation name="modify">
            <soap:operation
                soapAction="http://schemas.ogf.org/nsi/2012/03/connection/service/modify"
                style="document" />
            <wsdl:input>
                <soap:header message="interface:header" part="header" use="literal"/>
                <soap:body use="literal" />
            </wsdl:input>
            <wsdl:output>
                <soap:header message="interface:header" part="header" use="literal"/>
                <soap:body use="literal" />
            </wsdl:output>
            <wsdl:fault name="serviceException">
                <soap:fault name="serviceException" use="literal" />
            </wsdl:fault>
        </wsdl:operation>

        <!-- ********** ModifyCancel operation set ********** -->
        
        <wsdl:operation name="modifyCancel">
            <soap:operation
                soapAction="http://schemas.ogf.org/nsi/2012/03/connection/service/modifyCancel"
                style="document" />
            <wsdl:input>
                <soap:header message="interface:header" part="header" use="literal"/>
                <soap:body use="literal" />
            </wsdl:input>
            <wsdl:output>
                <soap:header message="interface:header" part="header" use="literal"/>
                <soap:body use="literal" />
            </wsdl:output>
            <wsdl:fault name="serviceException">
                <soap:fault name="serviceException" use="literal" />
            </wsdl:fault>
        </wsdl:operation>
        
        <!-- ********** Provision operation set ********** -->

        <wsdl:operation name="provision">
            <soap:operation
                soapAction="http://schemas.ogf.org/nsi/2012/03/connection/service/provision"
                style="document" />
            <wsdl:input>
                <soap:header message="interface:header" part="header" use="literal"/>
                <soap:body use="literal" />
            </wsdl:input>
            <wsdl:output>
                <soap:header message="interface:header" part="header" use="literal"/>
                <soap:body use="literal" />
            </wsdl:output>
            <wsdl:fault name="serviceException">
                <soap:fault name="serviceException" use="literal" />
            </wsdl:fault>
        </wsdl:operation>

        <!-- ********** Release operation set ********** -->

        <wsdl:operation name="release">
            <soap:operation
                soapAction="http://schemas.ogf.org/nsi/2012/03/connection/service/release"
                style="document" />
            <wsdl:input>
                <soap:header message="interface:header" part="header" use="literal"/>
                <soap:body use="literal" />
            </wsdl:input>
            <wsdl:output>
                <soap:header message="interface:header" part="header" use="literal"/>
                <soap:body use="literal" />
            </wsdl:output>
            <wsdl:fault name="serviceException">
                <soap:fault name="serviceException" use="literal" />
            </wsdl:fault>
        </wsdl:operation>

        <!-- ********** Terminate reservation operation set ********** -->

        <wsdl:operation name="terminate">
            <soap:operation
                soapAction="http://schemas.ogf.org/nsi/2012/03/connection/service/terminate"
                style="document" />
            <wsdl:input>
                <soap:header message="interface:header" part="header" use="literal"/>
                <soap:body use="literal" />
            </wsdl:input>
            <wsdl:output>
                <soap:header message="interface:header" part="header" use="literal"/>
                <soap:body use="literal" />
            </wsdl:output>
            <wsdl:fault name="serviceException">
                <soap:fault name="serviceException" use="literal" />
            </wsdl:fault>
        </wsdl:operation>

        <!-- ********** Query operation set ********** -->

        <wsdl:operation name="query">
            <soap:operation
                soapAction="http://schemas.ogf.org/nsi/2012/03/connection/service/query"
                style="document" />
            <wsdl:input>
                <soap:header message="interface:header" part="header" use="literal"/>
                <soap:body use="literal" />
            </wsdl:input>
            <wsdl:output>
                <soap:header message="interface:header" part="header" use="literal"/>
                <soap:body use="literal" />
            </wsdl:output>
            <wsdl:fault name="serviceException">
                <soap:fault name="serviceException" use="literal" />
            </wsdl:fault>
        </wsdl:operation>

        <wsdl:operation name="queryConfirmed">
            <soap:operation
                soapAction="http://schemas.ogf.org/nsi/2012/03/connection/service/queryConfirmed"
                style="document" />
            <wsdl:input>
                <soap:header message="interface:header" part="header" use="literal"/>
                <soap:body use="literal" />
            </wsdl:input>
            <wsdl:output>
                <soap:header message="interface:header" part="header" use="literal"/>
                <soap:body use="literal" />
            </wsdl:output>
            <wsdl:fault name="serviceException">
                <soap:fault name="serviceException" use="literal" />
            </wsdl:fault>
        </wsdl:operation>
        
        <wsdl:operation name="queryFailed">
            <soap:operation
                soapAction="http://schemas.ogf.org/nsi/2012/03/connection/service/queryFailed"
                style="document" />
            <wsdl:input>
                <soap:header message="interface:header" part="header" use="literal"/>
                <soap:body use="literal" />
            </wsdl:input>
            <wsdl:output>
                <soap:header message="interface:header" part="header" use="literal"/>
                <soap:body use="literal" />
            </wsdl:output>
            <wsdl:fault name="serviceException">
                <soap:fault name="serviceException" use="literal" />
            </wsdl:fault>
        </wsdl:operation>
    </wsdl:binding>
    
    <wsdl:service name="ConnectionServiceProvider">
        <wsdl:port name="ConnectionServiceProviderPort" binding="tns:ConnectionServiceProviderSoapBinding">
            <soap:address location="https://localhost:8443/nsi-v2/ConnectionServiceProvider" />
        </wsdl:port>
    </wsdl:service>
</wsdl:definitions>
